@model HAWK_v.Models.UserModel
@{
    Layout = "\\EmpLayout.cshtml";
}
<div class="row tm-content-row tm-mt-big">
    <div class="col-xl-12 col-lg-12 tm-md-12 tm-sm-12 tm-col">
        @{
            string[] depName = { "0", "Managmemnt", "Information Technology Department", "HR Department", "Markiting Department", "Finance Department", "Products Department" };
        }
        <h3>@depName[Model.Dno]</h3>
        <br />

        <h2>Attendance Statistics</h2>

    </div>
</div>
<div class="row">
    <div class="col-4">
        <br />
        <div class="table-responsive">
            <table class="table table-striped mt-4">
                <thead>
                    <tr class="tm-bg-gray">
                        <th>Date</th>
                        <th>Time In</th>
                        <th>Time Out</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        try
                        {


                            foreach (string Attendnce in ViewBag.Attendnce)
                            {
                                string[] x = Attendnce.Split(',');
                                <tr>
                                    <td>
                                        @x[3]
                                    </td>
                                    <td>
                                        @x[0]
                                    </td>
                                    <td>
                                        @x[2]
                                    </td>
                                </tr>
                            }
                        }
                        catch (Exception e)
                        {

                        }
                    }
                </tbody>
            </table>
        </div>

    </div>
    <div class="col-8">
        <br />
        <iframe title="HawkEmpAnalysis - Employee" width="600" height="500" src="https://app.powerbi.com/reportEmbed?reportId=051af612-ca92-43f9-9dc7-9db6d076c543&autoAuth=true&ctid=2d3194e3-1654-46bd-bae2-ad37ba11b0ae&config=eyJjbHVzdGVyVXJsIjoiaHR0cHM6Ly93YWJpLXdlc3QtZXVyb3BlLXJlZGlyZWN0LmFuYWx5c2lzLndpbmRvd3MubmV0LyJ9&filter=Users/Name eq '@Model.Name'" frameborder="0" allowFullScreen="true"></iframe>

    </div>
</div>

